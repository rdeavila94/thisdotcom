{
  "name": "rdeaviladotcom",
  "version": "1.0.0",
  "description": "Richard DeAvila's website",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:sass": "node-sass scss/styles.scss css/styles.css -w",
    "devserver": "live-server",
    "start-dev": "npm-run-all --parallel watch:sass devserver",

    "compile:sass": "node-sass scss/styles.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Richard De Avila",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.6.4",
    "concat": "^1.0.3",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3"
  },
  "dependencies": {}
}
